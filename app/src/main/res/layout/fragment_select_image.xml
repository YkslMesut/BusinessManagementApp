<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/select_image_fragment"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/selectedImage"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="0dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Dorse kapak açık olmasına dikkat edin"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btnTakePicAgain"
                android:text="Yeniden Çek"
                app:backgroundTint="@color/black"
                android:textColor="@color/white"
                app:iconGravity="textTop"
                app:icon="@drawable/ic_baseline_refresh_24"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:id="@+id/btnSendPic"
                android:layout_weight="1"
                app:backgroundTint="#020E51"
                android:text="Gönder"
                android:textColor="@color/white"
                app:iconGravity="textTop"
                app:icon="@drawable/ic_baseline_send_24"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:id="@+id/btnAddPic"
                android:layout_weight="1"
                app:backgroundTint="@color/black"
                android:text="Ekle"
                android:textColor="@color/white"
                app:iconGravity="textTop"
                app:icon="@drawable/ic_baseline_add_a_photo_24"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</layout>